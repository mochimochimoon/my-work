<%
data = {
  "japanese": "カラム切り替え",
  "name": "section1",
  "codes": [
    {
      "type": "html",
      "txt": "コード"
    },
    {
      "type": "sass",
      "txt": "コード"
    }
  ]
};
-%>

<div class="modal">
  <div class="modal__body">
    <div class="code js-modal-body js-tab-wrapper">
      <div class="code__head">
        <h2>コード:<%= data.japanese %></h2>
        <div class="code__close js-modal-close">
            <% include /ejs/_icon/_close %>
        </div>
      </div>
      <div class="code__action">
        <ul class="tab-btn-list">
  <%
  const codes = data.codes;
  for (var i = 0; i < codes.length; i++) {
    let c = codes[i];
    let selected;
    let active
    if (i === 0) {
      selected = 'true';
      active = ' is-selected';
    } else {
      selected = '';
      active = '';
    }
  -%>
          <li class="tab-btn js-tab-trigger<%= active %>" id="<%= data.name %>-tab-<%= c.type %>" role="tab" aria-selected="<%= selected %>" aria-controls="<%= data.name %>-content-<%= c.type %>" data-tab="<%= i + 1 %>"><%= c.type %></li>
  <%
  }
  -%>
        </ul>
      </div>
      <ul class="tab-contents-list">
  <%
  for (var i = 0; i < codes.length; i++){
    let c = codes[i];
    let selected;
    let active
    if (i === 0) {
      selected = 'true';
      active = ' is-active';
    } else {
      selected = '';
      active = '';
    }
  -%>
        <li class="js-tab-contents<%= active %>" role="tabpanel" id="<%= data.name %>-content-<%= c.type %>" aria-labelledby="<%= data.name %>-tab-<%= c.type %>" data-tab="<%= i + 1 %>">
          <h2><%= c.type %></h2>
          <p>sssssssssssssssssssss</p>
        </li>
  <%
  }
  -%>
      </ul>
    </div>
  </div>
</div>
